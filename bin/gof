#!/bin/bash
[ -z "$PASSAGE_DIR" ] && PASSAGE_DIR="$HOME/.passage/store";

if [ -n "$IMPORT_FILE" ] ; then
  echo "\$ EDITOR=$0 passage edit < $IMPORT_FILE";
  [ -z "$1" ] && exit 1;
  cat "$IMPORT_FILE" > "$1";
  exit "$?";
fi

function find_password_entries() {
  find -L "$PASSAGE_DIR" -not -name .git -a -name '*.age' 2>/dev/null \
    | sed -e "s#${PASSAGE_DIR}/\{0,1\}##" -e 's#\.age##' -e 's#\\#\\\\#g' -e 's#:#\\:#g' \
    | sort;
}

if [ "$1" = "ls" ]; then
  find_password_entries;
elif [ "$1" = "export" ]; then
  OUTPUT="$2";
  [ -d "$OUTPUT" ] || exec echo "Output directory does not exists";
  for i in $(find_password_entries); do
    mkdir -p "$OUTPUT/$(dirname "$i")";
    echo "passage show $i > $OUTPUT/$i.yaml";
    passage show "$i" > "$OUTPUT/$i.yaml";
  done
elif [ "$1" = "import" ]; then
  export SOURCE_DIR="$2";
  [ -d "$SOURCE_DIR" ] || exec echo "Usage: gof import /path/to/exported/files";
  for f in $(find "$SOURCE_DIR" -type f | grep '\.yaml$'); do
    export EDITOR="$0";
    export IMPORT_FILE="$f";
    name="${IMPORT_FILE%.*}";
    name="$(echo "$name" | sed -e "s#${SOURCE_DIR}/\{0,1\}##")";
    passage edit "$name";
  done
else
  passage show _start >/dev/null;
  found=$(find_password_entries | fzf --no-mouse --preview "passage show {} | perl -ne'print if $. > 1'");
  [ -n "$found" ] && passage show -c "$found";
fi
