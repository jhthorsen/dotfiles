#!/bin/bash
export SELF="$0";

find_bin() {
  NAME="$1";
  which -a "$NAME" | while read -r path; do
    [ "$SELF" = "$path" ] && continue;
    echo "$path";
    break;
  done
}

if [ -e 'pnpm-lock.yaml' ]; then
  REAL_BIN="$(find_bin pnpm)";
  [ -n "$REAL_BIN" ] && exec $REAL_BIN "$@";
else
  REAL_BIN="$(find_bin npm)";
  [ -n "$REAL_BIN" ] && exec $REAL_BIN "$@";
fi
