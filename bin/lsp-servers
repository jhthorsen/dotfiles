#!/bin/bash

run() {
  echo "# $*";
  if [ "$(uname)" = "Darwin" ]; then "$@"; else sudo "$@"; fi
}

run cpanm -n PLS::Server;
run npm -g install bash-language-server;
run npm -g install svelte-language-server;
run npm -g install typescript typescript-language-server;
run npm -g install @volar/vue-language-server;
run npm -g install vscode-langservers-extracted; # css, eslint, html
run npm -g install yaml-language-server
