#!/usr/bin/env perl
use strict;

my @bin;
push @bin, $ENV{VIM_BIN} if $ENV{VIM_BIN};
@bin = map { chomp; $_ } qx{which -a vim} unless @bin;
die "Could not find real vim" unless @bin;

exec $bin[0],
    @ARGV     ? (@ARGV)
  : -d '.git' ? (-c => ':Telescope git_files')
  :             (-c => ':Telescope oldfiles');

die $!;
