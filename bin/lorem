#!/bin/bash
N_WORDS="${1:-100}";
WORDS=()

echo "$N_WORDS" | grep -q "^[1-9][0-9]*$" \
  || exec echo "Usage: lorem [n_words]";

while true; do
  [ "$N_WORDS" = 0 ] && break;
  page="$(find /usr/share/man/man1 -type f | sort -R | head -n1)";
  page="${page#.*}";
  while read -r word; do
    WORDS+=("$word");
    N_WORDS="$(($N_WORDS - 1))";
    [ "$N_WORDS" = "0" ] && break;
  done < <(man "$page" | sed 'y/ /\n/' | grep -E '^[a-z]{4,}$' | sort | uniq | sort -R);
done

echo "${WORDS[@]}";
